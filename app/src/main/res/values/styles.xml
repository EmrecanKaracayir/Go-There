<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ? TYPOGRAPHY -->
    <style name="GT_Typography.DO_NOT_USE" parent="">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="GT_Typography.Regular.Caption" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">-0.025</item>
        <item name="android:lineHeight">14dp</item>
    </style>

    <style name="GT_Typography.Regular.Large.Caption" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="GT_Typography.Medium.Body" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">20dp</item>
    </style>

    <style name="GT_Typography.Medium.Large.Body" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">22dp</item>
    </style>

    <style name="GT_Typography.SemiBold.Subtitle" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">24dp</item>
    </style>

    <style name="GT_Typography.SemiBold.Large.Subtitle" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">26dp</item>
    </style>

    <style name="GT_Typography.Bold.Title" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">28dp</item>
    </style>

    <style name="GT_Typography.Bold.Large.Title" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:lineHeight">32dp</item>
    </style>

    <style name="GT_Typography.ExtraBold.Headline" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:lineHeight">38dp</item>
    </style>

    <style name="GT_Typography.ExtraBold.Large.Headline" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_extrabold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineHeight">42dp</item>
    </style>

    <style name="GT_Typography.Black.ArtisticHeadline" parent="GT_Typography.DO_NOT_USE">
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineHeight">54dp</item>
    </style>

    <!-- ? BUTTON -->
    <style name="GT_Button.Default" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?GT_compStroke</item>
        <item name="android:layout_height">@dimen/spacing1XL</item>
        <item name="android:insetTop">@dimen/spacingNone</item>
        <item name="android:insetBottom">@dimen/spacingNone</item>
        <item name="android:insetLeft">@dimen/spacingNone</item>
        <item name="android:insetRight">@dimen/spacingNone</item>
        <item name="android:paddingLeft">@dimen/spacingNone</item>
        <item name="android:paddingRight">@dimen/spacingNone</item>
        <item name="android:paddingStart">@dimen/spacing1XS</item>
        <item name="android:paddingTop">@dimen/spacingNone</item>
        <item name="android:paddingEnd">@dimen/spacing1XS</item>
        <item name="android:paddingBottom">@dimen/spacingNone</item>
        <item name="cornerRadius">@dimen/spacing2XS</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing2XS</item>
        <item name="iconSize">@dimen/spacing1XS</item>
    </style>

    <style name="GT_Button.Label" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing1XL</item>
        <item name="android:insetTop">@dimen/spacingNone</item>
        <item name="android:insetBottom">@dimen/spacingNone</item>
        <item name="android:insetLeft">@dimen/spacingNone</item>
        <item name="android:insetRight">@dimen/spacingNone</item>
        <item name="android:paddingLeft">@dimen/spacingNone</item>
        <item name="android:paddingRight">@dimen/spacingNone</item>
        <item name="android:paddingStart">@dimen/spacing1XS</item>
        <item name="android:paddingTop">@dimen/spacingNone</item>
        <item name="android:paddingEnd">@dimen/spacing1XS</item>
        <item name="android:paddingBottom">@dimen/spacingNone</item>
        <item name="cornerRadius">@dimen/spacing2XS</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing2XS</item>
        <item name="iconSize">@dimen/spacing1XS</item>
    </style>

    <style name="GT_Button.Oval" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacingMedium</item>
        <item name="android:insetTop">@dimen/spacingNone</item>
        <item name="android:insetBottom">@dimen/spacingNone</item>
        <item name="android:insetLeft">@dimen/spacingNone</item>
        <item name="android:insetRight">@dimen/spacingNone</item>
        <item name="android:paddingLeft">@dimen/spacingNone</item>
        <item name="android:paddingRight">@dimen/spacingNone</item>
        <item name="android:paddingStart">@dimen/spacingSmall</item>
        <item name="android:paddingTop">@dimen/spacingNone</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?GT_compStroke</item>
        <item name="android:paddingEnd">@dimen/spacingSmall</item>
        <item name="android:paddingBottom">@dimen/spacingNone</item>
        <item name="cornerRadius">@dimen/spacing1XS</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/spacing2XS</item>
        <item name="iconSize">@dimen/spacing1XS</item>
    </style>

    <style name="GT_Button.Circle" parent="Widget.Material3.Button.IconButton">
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/spacing1XL</item>
        <item name="android:insetTop">@dimen/spacingNone</item>
        <item name="android:insetBottom">@dimen/spacingNone</item>
        <item name="android:insetLeft">@dimen/spacingNone</item>
        <item name="android:insetRight">@dimen/spacingNone</item>
        <item name="android:paddingLeft">@dimen/spacingNone</item>
        <item name="android:paddingRight">@dimen/spacingNone</item>
        <item name="android:paddingStart">@dimen/spacing1XS</item>
        <item name="android:paddingTop">@dimen/spacingNone</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?GT_compStroke</item>
        <item name="android:paddingEnd">@dimen/spacing1XS</item>
        <item name="android:paddingBottom">@dimen/spacingNone</item>
        <item name="cornerRadius">@dimen/spacingSmall</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/spacing1XS</item>
    </style>

    <!-- ? TEXT FIELD -->
    <style name="GT_EditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <!-- INPUT TEXT -->
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
    </style>

    <style name="GT_LayoutTextInput.Default" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <!-- LABEL -->
        <item name="hintTextAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <!-- CONTAINER -->
        <item name="boxCornerRadiusTopStart">@dimen/spacing2XS</item>
        <item name="boxCornerRadiusTopEnd">@dimen/spacing2XS</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/spacing2XS</item>
        <item name="boxCornerRadiusBottomStart">@dimen/spacing2XS</item>
        <!-- SUPPORTING TEXT -->
        <item name="helperTextTextAppearance">@style/GT_Typography.Regular.Caption</item>
        <item name="errorTextAppearance">@style/GT_Typography.Regular.Caption</item>
        <item name="counterTextAppearance">@style/GT_Typography.Regular.Caption</item>
        <item name="counterOverflowTextAppearance">@style/GT_Typography.Regular.Caption</item>
        <!-- PREFIX/SUFFIX TEXT -->
        <item name="prefixTextAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="suffixTextAppearance">@style/GT_Typography.Medium.Large.Body</item>
    </style>

    <style name="GT_LayoutTextInput.Filled" parent="GT_LayoutTextInput.Default">
        <item name="boxBackgroundColor">?GT_compSurface</item>
    </style>

    <!-- ? CARDS -->
    <style name="GT_Card.Surface.NoSize" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?GT_compSurface</item>
        <item name="cardElevation">@dimen/spacing2XS</item>
        <item name="cardCornerRadius">@dimen/spacing1XS</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?GT_compStroke</item>
    </style>

    <style name="GT_Card.Widget.NoSize" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">?GT_compLayerPrimary</item>
        <item name="cardElevation">@dimen/spacing2XS</item>
        <item name="cardCornerRadius">@dimen/spacing1XS</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?GT_compStroke</item>
    </style>

    <!-- ? CHECKBOXES -->
    <style name="GT_Checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <!-- LABEL -->
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:textColor">?GT_basicHcPrimary</item>
    </style>

    <!-- ? DIALOGS -->
    <style name="GT_MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/GT_ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="GT_ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing1XS</item>
    </style>

    <style name="GT_MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textAppearance">@style/GT_Typography.ExtraBold.Headline</item>
        <item name="android:textColor">?GT_basicHcPrimary</item>
    </style>

    <style name="GT_MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textAppearance">@style/GT_Typography.Medium.Large.Body</item>
        <item name="android:textColor">?GT_basicHcSecondary</item>
    </style>

    <style name="GT_Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?GT_basicHcPrimary</item>
    </style>

    <style name="GT_ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="colorSurface">?GT_compBase</item>
        <item name="alertDialogStyle">@style/GT_MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">
            @style/GT_MaterialAlertDialog.App.Title.Text
        </item>
        <item name="materialAlertDialogBodyTextStyle">@style/GT_MaterialAlertDialog.App.Body.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/GT_Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/GT_Widget.App.Button</item>
    </style>

</resources>